{
	"name": "forrest79/composer-ny",
	"authors": [
		{
			"name": "Developers of PMG",
			"email": "dev@csfd.cz",
			"role": "Developer"
		}
	],
	"require": {
		"composer/composer": "2.3.5",
		"nette/neon": "^3.3",
		"php": ">=8.0",
		"symfony/console": "^6.0",
		"symfony/yaml": "^6.0",
		"bircher/php-merge": "^4.0"
	},
	"autoload": {
		"psr-4": {
			"Forrest79\\ComposerNY\\": "src"
		}
	},
	"bin": [
		"bin/composer"
	],
	"require-dev": {
		"forrest79/phpcs": "^0.3.0",
		"phpstan/phpstan": "^1.5",
		"phpstan/phpstan-strict-rules": "^1.1"
	},
	"scripts": {
		"compile": "@php -dphar.readonly=0 bin/compile",
		"phpcs": "vendor/bin/phpcs -s src",
		"phpstan": "vendor/bin/phpstan analyse src"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": false
		}
	}
}
